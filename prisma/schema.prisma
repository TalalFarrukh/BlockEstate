// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  previewFeatures = ["postgresqlExtensions"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  extensions = postgis
}
model sessions {
  id      Int   @id @default(autoincrement())
  address   String?
  session_id    String?
  token   String?
  status String?
}

model users {
  id      Int   @id @default(autoincrement())
  address   String?
  cnic    String?
  first_name String?
  last_name String?
  email   String?
  contact String?
  is_registered   String @default("0")
}

model land_sale {
  id      Int   @id @default(autoincrement())
  land_id   Int?
  address   String?
  usercnic    String?
  price   Int?
  land_address   String?
  type   String?
  area   Int?
}

model bid_requests {
  id    Int   @id @default(autoincrement())
  land_id   Int?
  seller_address   String?
  buyer_address   String?
  ask_price   Int?
  bid_price   Int?
  is_status   String @default("0")
  is_buyer_signed   String @default("0")
  is_seller_signed    String @default("0")
  is_buyer_paid    String @default("0")
  accepted_price   Int?
}